<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personals"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fffff0" >
	<FrameLayout
	    android:id="@+id/loginLinear10"
	    android:layout_width="fill_parent"
	    android:layout_height="48sp"
	    android:background="@drawable/addshop_facus"
	    android:orientation="horizontal" 
	    android:visibility="visible">

	    <TextView
	        android:layout_width="130sp"
	        android:layout_height="30sp"
	        android:text="我的来伊粉"
	        android:textColor="#FFFFFF"
	        android:textSize="25sp" 
	        android:layout_gravity="center_horizontal|center_vertical"/>

	    <TextView
	        android:id="@+id/evenmore"
	        android:layout_width="50sp"
	        android:layout_height="30sp"
	        android:layout_gravity="center_horizontal|center_vertical|right"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/likeeat_next"
	        android:text="更多"
	        android:textSize="15sp"
	        android:gravity="center_horizontal|center_vertical"
	        android:textColor="#ffffff" />

	</FrameLayout>
    <ImageView
        android:id="@+id/supply"
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:background="@drawable/recharge" />

    <LinearLayout
        android:id="@+id/noLoginLinear"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/register"
            style="\@style/size_16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/my_left"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white" />

        <TextView
            android:id="@id/login"
            style="\@style/size_16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/my_right"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7.0dip"
                android:background="@drawable/myaccount_userlogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/loginuser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10.0dip"
                    android:text="早上好 用户"
                    android:textColor="#ff00"
                    android:textSize="16.0sp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10.0dip"
                        android:textColor="@color/lblack"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15.0dip"
                        android:textColor="@color/lblack"
                        android:textSize="16.0sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15.0dip"
                android:background="@drawable/list_addshop"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="便利充值"
                android:textColor="@color/font_style_colors"
                android:textSize="16.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center_horizontal|center_vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/my"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/my"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/my" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:layout_below="@+id/my"
                        android:text="我的账户"
                        android:textColor="@color/lgray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/coupon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/coupon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:text="我的卡券"
                        android:textColor="@color/lgray" />

                    <TextView
                        android:id="@+id/couponNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/number_bg"
                        android:gravity="center"
                        android:paddingLeft="2.0dip"
                        android:paddingRight="2.0dip"
                        android:textColor="@color/white"
                        android:textSize="12.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:text="我的订单"
                        android:textColor="@color/lgray" />

                    <TextView
                        android:id="@+id/orderNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/number_bg"
                        android:gravity="center"
                        android:paddingLeft="2.0dip"
                        android:paddingRight="2.0dip"
                        android:textColor="@color/white"
                        android:textSize="12.0sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/see"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:id="@+id/see1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/see" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:layout_below="@+id/see1"
                        android:layout_centerHorizontal="true"
                        android:text="我的关注"
                        android:textColor="@color/lgray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/more"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:id="@+id/more1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:text="我的爱吃"
                        android:layout_below="@+id/more1"
                        android:textColor="@color/lgray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/feet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:id="@+id/feet1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/feet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:text="伊点卡余额查询"
                        android:layout_below="@+id/feet1"
                        android:textColor="@color/lgray" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>