<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffff0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/RelativeLayout03"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/addshop_facus"
        android:orientation="horizontal"
         >
        
         <LinearLayout
        android:id="@+id/linearLayout05"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
         > 
	    <ImageView
       android:id="@+id/addConsigneeAddr_iv"                             
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="left|center"
       android:src="@drawable/left_normal"
                            />
	     <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"       
            android:text="购物车"
            android:textColor="#ffffff"
            android:textSize="18sp" 
            android:gravity="center_vertical"
            />
         </LinearLayout >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="订单结算"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/orderCommit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="订单提交"
            android:textColor="#ffffff"
            android:textSize="16dp" 
            android:background="@drawable/addshop_facus"/>
 
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/conform_topbg"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:text="应付金额(含运费)："
            android:textSize="16dp" />

        <TextView
            android:id="@+id/payMoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="￥0.00"
            android:textColor="#ffc33c00"
            android:textSize="16dp" />
    </LinearLayout>

    <include layout="@+layout/settlement_scroll"/>

</LinearLayout>