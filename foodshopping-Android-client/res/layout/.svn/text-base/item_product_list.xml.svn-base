<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal" 
    android:weightSum="1"
    
    >
    <ImageView 
        android:id="@+id/imageview_product_list"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.4"
        android:layout_margin="15dp"
        android:src="@drawable/t3"
        />
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:layout_margin="15dp"
	    android:layout_weight="0.6"
	    android:descendantFocusability="blocksDescendants"
	    >
	    <TextView 
	        android:id="@+id/textview_product_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="五香牛肉粒120g"
	        android:layout_marginBottom="10dp"
	        />
	     <TextView 
	        android:id="@+id/textview_product_desc"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="肉粒鲜美 五香回味"
	        android:textColor="#ffcccccc"
	        android:layout_marginBottom="10dp"
	        android:textSize="12sp"
	        />
	     <TextView 
	         android:id="@+id/textview_product_price"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:text="￥22.33"
	         android:gravity="left"
	         android:textColor="#ffc33c00"
	         android:layout_marginBottom="10dp"
	         />
	     <ImageButton 
	         android:id="@+id/button_addToCart"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:background="@drawable/selector_bt_addtocart"
	         
	         />
	</LinearLayout>
</LinearLayout>
