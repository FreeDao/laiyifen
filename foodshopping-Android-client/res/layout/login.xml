<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:text="来伊份会员请用卡号直接登录"
        android:textColor="@color/lblack"
        android:textSize="18.0sp" />

    <EditText
        android:id="@+id/username2"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/text_bg"
        android:gravity="center_vertical"
        android:hint="手机号/用户名/会员卡号"
        android:paddingLeft="5.0dip"
        android:textColor="@color/lblack"
        android:textColorHint="@color/lgray"
        android:textSize="16.0sp" 
        android:text="chengxiaolei"/>

    <EditText
        android:id="@+id/password2"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/text_bg"
        android:gravity="center_vertical"
        android:hint="密码"
        android:paddingLeft="5.0dip"
        android:password="true"
        android:textColor="@color/lblack"
        android:textColorHint="@color/lgray"
        android:textSize="16.0sp"
		android:text="123"/>

    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="15.0dip"
        android:gravity="right"
        android:text="忘记密码"
        android:textColor="@color/lblack"
        android:textSize="18.0sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/product_addshop"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="20.0dip"
        android:gravity="left"
        android:text="使用第三方账号登录:"
        android:textColor="@color/lblack"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="20.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/qqLogin"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_weight="1.0"
            android:background="@drawable/qq_login" />

        <ImageView
            android:id="@+id/weiboLogin"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/weibo_login" />
    </LinearLayout>

</LinearLayout>