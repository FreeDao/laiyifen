<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView 
            android:id="@+id/imageView_product_pic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/t3"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/textview_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥29.50"
                android:textSize="10sp"
                android:textColor="#ffcccccc"
                />
             <TextView 
                android:id="@+id/textview_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥28.00"
                android:textSize="10sp"
                android:textColor="#ffc33c00"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <TextView 
            android:id="@+id/textView_product_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:text="西梅318g"
            android:textSize="10sp"
            />
        <TextView 
	         android:id="@+id/button_addToCart"
	         android:layout_width="80dp"
	         android:layout_height="0dp"
	         android:background="@drawable/selector_bt_addshop"
	         android:textColor="@drawable/selector_textcolor_addshop"
	         android:layout_weight="0.1"
	         android:text="加入购物车"
	         android:textSize="10sp"
	         android:gravity="center"
	         android:layout_marginTop="5dp"
	         
	         />
    </LinearLayout>

</RelativeLayout>
